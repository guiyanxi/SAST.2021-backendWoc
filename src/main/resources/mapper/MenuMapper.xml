<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.woc.mapper.MenuMapper">

  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="com.example.woc.entity.Menu">
    <id column="id" property="id"/>
    <result column="path" property="path"/>
    <result column="name" property="name"/>
    <result column="requireAuth" property="requireAuth"/>
    <result column="parentId" property="parentId"/>
  </resultMap>

  <resultMap id="Menus" type="com.example.woc.entity.Menu" extends="BaseResultMap">
    <collection property="children" ofType="com.example.woc.entity.Menu">
      <id column="id2" property="id"/>
      <result column="path2" property="path"/>
      <result column="name2" property="name"/>
      <result column="requireAuth2" property="requireAuth"/>
      <result column="parentId2" property="parentId"/>
    </collection>
  </resultMap>

  <resultMap id="MenusWithRole" type="com.example.woc.entity.Menu" extends="BaseResultMap">
    <collection property="roles" ofType="com.example.woc.entity.Role">
      <result column="username" property="username"/>
      <result column="role" property="role"/>
    </collection>
  </resultMap>

  <resultMap id="MenusWithChildren" type="com.example.woc.entity.Menu" extends="BaseResultMap">
    <id column="id1" property="id" />
    <result column="name1" property="name" />
    <collection property="children" ofType="com.example.woc.entity.Menu">
      <id column="id2" property="id" />
      <result column="name2" property="name" />
    </collection>
  </resultMap>

  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
        id,  path,  name,  requireAuth, parentId
    </sql>

  <!--根据用户id查询菜单列表-->
  <select id="getMenusByAdminId" resultMap="Menus">
    SELECT distinct
      m1.*,
      m2.id          id2,
      m2.path        path2,
      m2.name AS     name2,
      m2.requireAuth requireAuth2,
      m2.parentId    parentId2
    FROM
      t_menu m1,
      t_menu m2,
      t_admin_role ar,
      t_menu_role mr
    WHERE
      m1.id = m2.parentId
      AND m2.id = mr.mid
      AND mr.rid = ar.rid
      AND ar.account_id = #{id}
    ORDER BY
      m2.id
  </select>
  <!--根据角色获取菜单列表-->
  <select id="getMenusWithRole" resultMap="MenusWithRole">
      SELECT
        m.*,
        r.username username,
        r.role role
      FROM
        t_menu m,
        t_menu_role mr,
        t_role r
      WHERE
        m.id = mr.mid
        AND r.role = mr.rid
      ORDER BY
        m.id
  </select>

  <!--查询所有菜单-->
  <select id="getAllMenus" resultMap="MenusWithChildren">
      SELECT
        m1.id id1,
        m1.name name1,
        m2.id id2,
        m2.name name2
      FROM
        t_menu m1,
        t_menu m2
      WHERE
        m1.id = m2.parentId
  </select>

</mapper>
